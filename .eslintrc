{
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "jsx": true
  },
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 100, 2],
    "semi": 2,
    "strict": 0,
    "quotes": [1, "single", "avoid-escape"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "space-before-function-paren": 0,
    "space-before-keywords": 2,
  },
  "plugins": [
    "react"
  ]
}
